<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_move_custom_action" model="ir.actions.act_window">
        <field name="name">Invoices</field>
        <field name="res_model">account.move.custom</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('move_type', '=', 'out_invoice')]</field>
    </record>

    <record id="account_move_bill_custom_action" model="ir.actions.act_window">
        <field name="name">Bills</field>
        <field name="res_model">account.move.custom</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('move_type', '=', 'in_invoice')]</field>
    </record>

    <record id="account_payment_custom_action" model="ir.actions.act_window">
        <field name="name">Customer Payments</field>
        <field name="res_model">account.payment.custom</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('payment_type', '=', 'inbound')]</field>
    </record>

    <record id="account_vendor_payment_custom_action" model="ir.actions.act_window">
        <field name="name">Vendor Payments</field>
        <field name="res_model">account.payment.custom</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('payment_type', '=', 'outbound')]</field>
    </record>

    <record id="move_entry_custom_action" model="ir.actions.act_window">
        <field name="name">Journal Entries</field>
        <field name="res_model">move.entry.custom</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="bank_statement_custom_action" model="ir.actions.act_window">
        <field name="name">Internal Transfers</field>
        <field name="res_model">bank.statement.line.custom</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="city_medicals_sync_menu" name="City Medicals Sync" 
         sequence="1" />

    <menuitem id="accounting_sub_menu" name="Accounting" parent="city_medicals_sync_menu"
        sequence="1" />

    <menuitem id="invoices_menu" name="Invoices" parent="accounting_sub_menu"
        sequence="1" action="account_move_custom_action" />

    <menuitem id="bill_menu" name="Bills" parent="accounting_sub_menu"
        sequence="2" action="account_move_bill_custom_action" />

    <menuitem id="payment_menu" name="Payments" parent="city_medicals_sync_menu"
        sequence="2" />

    <menuitem id="customer_payment" name="Customer Payments" parent="payment_menu"
        sequence="1" action="account_payment_custom_action" />

    <menuitem id="vendor_payment" name="Vendor Payments" parent="payment_menu"
        sequence="1" action="account_vendor_payment_custom_action" />

    <menuitem id="move_entry_menu" name="Journal Entries" parent="city_medicals_sync_menu"
        sequence="3" action="move_entry_custom_action" />
    
    <menuitem id="bank_statement_menu" name="Internal Transfers" parent="city_medicals_sync_menu"
        sequence="4" action="bank_statement_custom_action" />


   
</odoo>