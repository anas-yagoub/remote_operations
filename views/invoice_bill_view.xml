<odoo>
    <data>

        <record id="view_account_move_custom_form" model="ir.ui.view">
            <field name="name">account.move.custom.form.view</field>
            <field name="model">account.move.custom</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="button_draft" type="object" data-hotkey="shift+g"
                            string="Reset To Draft"
                            class="oe_highlight" invisible="custom_state != 'rejected'" />

                        <button name="button_rejected" type="object" data-hotkey="shift+g"
                            string="Reject"
                            class="oe_highlight" invisible="custom_state != 'draft'" />
                        
                        <button name="create_account_move" type="object"
                            data-hotkey="shift+g"
                            string="Create Invoice"
                            invisible="custom_state != 'draft' or move_type not in ('out_invoice')"
                            class="oe_highlight" />

                        <button name="create_bill_move" type="object"
                            data-hotkey="shift+g"
                            string="Create Bill"
                            invisible="custom_state != 'draft' or move_type in ('entry','out_invoice')"
                            class="oe_highlight" />
                     
                    <field name="custom_state" widget="statusbar"
                            statusbar_visible="draft,created" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object"
                                invisible="move_count == 0"
                                name="open_move"
                                icon="fa-money">
                                <field string="Invoice/bill" name="move_count"
                                    widget="statinfo" />
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name" readonly="custom_state != 'draft'" />
                                <field name="partner_id" readonly="custom_state != 'draft'" />
                                <field name="patient" readonly="custom_state != 'draft'" />
                                <field name="company_id" readonly="custom_state != 'draft'" />
                                <field name="narration" readonly="custom_state != 'draft'" />
                                <field name="move_type" readonly="custom_state != 'draft'" />
                                <field name="state" readonly="custom_state != 'draft'" />
                                <field name="payment_state" readonly="custom_state != 'draft'" />
                                <field name="invoice_origin" readonly="custom_state != 'draft'" />
                            </group>
                            <group>
                                <field name="invoice_date" readonly="custom_state != 'draft'" />
                                <field name="invoice_date_due" readonly="custom_state != 'draft'" />
                                <field name="date" readonly="custom_state != 'draft'" />
                                <field name="journal_id" readonly="custom_state != 'draft'" />
                                <field name="invoice_payment_term_id"
                                    readonly="custom_state != 'draft'" />
                                <field name="currency_id" readonly="custom_state != 'draft'" />
                                <field name="payment_reference" readonly="custom_state != 'draft'" />
                                <field name="ref" readonly="custom_state != 'draft'" />
 
                            </group>
                        </group>
                        <notebook>
                            <page name="invoice_line_ids" 
                                string="Invoice Line">
                                <field name="invoice_line_ids" readonly="custom_state != 'draft'"
                                    widget="one2many">
                                    <list string="Invoice Line" editable="bottom">
                                        <field name="product_id" />
                                        <field name="name" />
                                        <field name="account_id" />
                                        <field name="analytic_distribution" widget="many2many_tags" />
                                        <field name="quantity" />
                                        <field name="product_uom_id"  />
                                        <field name="price_unit" />
                                        <field name="tax_ids" widget="many2many_tags"/>
                                        <field name="price_subtotal" />
                                    </list>
                                </field> 
                                <group class="oe_subtotal_footer" colspan="2">
                                    <field name="amount_untaxed" colspan="2" readonly="1" />
                                    <field name="amount_total" colspan="2" readonly="1" />
                                    <field name="amount_residual" colspan="2" readonly="1" />
                                    <field name="amount_paid" colspan="2" invisible="1" />
                                    <field name="amount_tax" colspan="2" invisible="1" />
                                
                                </group>
                            </page>
                            <page name="line_ids"
                                string="Journal Entries">
                                <field name="line_ids" readonly="custom_state != 'draft'"
                                     widget="one2many">
                                    <list string="Journal Entries" editable="bottom">
                                        <field name="account_id" />
                                        <field name="partner_id" />
                                        <field name="name" />
                                        <field name="analytic_distribution" widget="many2many_tags" />
                                        <field name="amount_currency"  />
                                        <field name="debit" sum="Debit" />
                                        <field name="credit" sum="Credit" />
                                    </list>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                    <chatter />

                </form>
            </field>
        </record>

        <record id="view_account_move_custom_search" model="ir.ui.view">
            <field name="name">account.move.custom.search</field>
            <field name="model">account.move.custom</field>
            <field name="arch" type="xml">
                <search string="Custom Account Moves">
                    <!-- Searchable fields -->
                    <field name="name" string="Reference" />
                    <field name="partner_id" string="Partner" />
                    <field name="invoice_date" string="Invoice Date" />
                    <field name="journal_id" string="Journal" />
                    <field name="company_id" string="Company" />
                    <field name="amount_total" string="Total Amount" />
                    <field name="custom_state" string="Status" />

                    <!-- Filters -->
                    <filter string="Draft" name="draft" domain="[('custom_state', '=', 'draft')]" />
                    <filter string="Created" name="created"
                        domain="[('custom_state', '=', 'created')]" />
                    <filter string="Rejected" name="rejected"
                        domain="[('custom_state', '=', 'rejected')]" />
                    <filter string="Invoices" name="invoices"
                        domain="[('move_type', '=', 'out_invoice')]" />
                    <filter string="Bills" name="bills" domain="[('move_type', '=', 'in_invoice')]" />
                    <filter string="This Month" name="this_month"
                        domain="[('invoice_date', '&gt;=', (context_today().strftime('%Y-%m-01'))), 
             ('invoice_date', '&lt;=', context_today().strftime('%Y-%m-%d'))]" />

                    <!-- Group By -->
                    <group expand="0" string="Group By">
                        <filter string="Partner" name="group_by_partner"
                            context="{'group_by': 'partner_id'}" />
                        <filter string="Status" name="group_by_status"
                            context="{'group_by': 'custom_state'}" />
                        <filter string="Journal" name="group_by_journal"
                            context="{'group_by': 'journal_id'}" />
                        <filter string="Company" name="group_by_company"
                            context="{'group_by': 'company_id'}" />
                        <filter string="Invoice Date" name="group_by_invoice_date"
                            context="{'group_by': 'invoice_date'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="view_account_move_custom_tree" model="ir.ui.view">
            <field name="name">account.move.custom.tree</field>
            <field name="model">account.move.custom</field>
            <field name="arch" type="xml">
                <list create="false">
                    <field name="name"/>
                    <field name="partner_id" />
                    <field name="invoice_date" />
                    <field name="journal_id" />
                    <field name="company_id" />
                    <field name="amount_total" />
                    <field name="custom_state" />
                </list>
            </field>
        </record>

    </data>
</odoo>