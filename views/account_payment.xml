<odoo>
    <data>

        <record id="view_account_payment_custom_form" model="ir.ui.view">
            <field name="name">account.payment.custom.form.view</field>
            <field name="model">account.payment.custom</field>
            <field name="arch" type="xml">
                <form>
                    <header> 
                         <button name="button_draft" type="object" data-hotkey="shift+g"
                            string="Reset To Draft"
                            class="oe_highlight" invisible="custom_state != 'rejected'" />

                        <button name="button_rejected" type="object" data-hotkey="shift+g"
                            string="Reject"
                            class="oe_highlight" invisible="custom_state != 'draft'" />

                        <button name="action_create_payment" type="object"
                            data-hotkey="shift+g"
                            string="Create Payment"
                            class="oe_highlight" invisible="custom_state != 'draft'" />
                        
                    <field name="custom_state" widget="statusbar"
                            statusbar_visible="draft,created" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object"
                                invisible="payment_count == 0"
                                name="open_payments"
                                icon="fa-money">
                            <field string="Payments" name="payment_count"
                                    widget="statinfo" />
                        </button>
                        </div>
                        <group>
                            <group>
                                <field name="name" readonly="custom_state != 'draft'" />
                                <field name="payment_type" readonly="custom_state != 'draft'" />
                                <field name="partner_id" readonly="custom_state != 'draft'" />
                                <field name="amount" readonly="custom_state != 'draft'" />
                                <field name="currency_id" readonly="custom_state != 'draft'" />
                                <field name="date" readonly="custom_state != 'draft'" />
                                <field name="memo" readonly="custom_state != 'draft'" />
                                <field name="state" readonly="custom_state != 'draft'" />
                            </group>
                            <group>
                                <field name="journal_id" readonly="custom_state != 'draft'" />
                                <field name="payment_method_line_id"
                                    readonly="custom_state != 'draft'" />
                                <field name="state" readonly="custom_state != 'draft'" />
                                <field name="company_id" readonly="custom_state != 'draft'" />
                                <field name="payment_id" readonly="1" />
                                <field name="source_state" readonly="1" />
                            </group>
                        </group>
                    </sheet>
                    <chatter />
                </form>
            </field>
        </record>

        <record id="view_account_payment_custom_search" model="ir.ui.view">
            <field name="name">account.payment.custom.search</field>
            <field name="model">account.payment.custom</field>
            <field name="arch" type="xml">
                <search string="Custom Payments">
                    <!-- Searchable fields -->
                    <field name="name" string="Reference" />
                    <field name="payment_type" string="Payment Type" />
                    <field name="partner_id" string="Partner" />
                    <field name="amount" string="Amount" />
                    <field name="currency_id" string="Currency" />
                    <field name="date" string="Date" />
                    <field name="memo" string="Memo" />
                    <field name="journal_id" string="Journal" />
                    <field name="payment_method_line_id" string="Payment Method" />
                    <field name="company_id" string="Company" />
                    <field name="state" string="State" />
                    <field name="custom_state" string="Custom Status" />

                    <!-- Filters -->

                    <filter string="Draft" name="draft" domain="[('custom_state', '=', 'draft')]" />
                    <filter string="Created" name="created"
                        domain="[('custom_state', '=', 'created')]" />
                    <filter string="Rejected" name="rejected"
                        domain="[('custom_state', '=', 'rejected')]" />
                    <filter string="Posted" name="posted" domain="[('state', '=', 'posted')]" />
                    <filter string="Inbound Payments" name="inbound"
                        domain="[('payment_type', '=', 'inbound')]" />
                    <filter string="Outbound Payments" name="outbound"
                        domain="[('payment_type', '=', 'outbound')]" />

                    <filter string="This Month" name="this_month"
                        domain="[('date', '&gt;=', (context_today().strftime('%Y-%m-01'))), 
             ('date', '&lt;=', context_today().strftime('%Y-%m-%d'))]" />


                    <!-- Group By -->
                    <group expand="0" string="Group By">
                        <filter string="Source State" name="group_source_state"
                            context="{'group_by': 'source_state'}" />

                        <filter string="Partner" name="group_by_partner"
                            context="{'group_by': 'partner_id'}" />
                        <filter string="Custom Status" name="group_by_custom_state"
                            context="{'group_by': 'custom_state'}" />
                        <filter string="State" name="group_by_state" context="{'group_by': 'state'}" />
                        <filter string="Payment Type" name="group_by_payment_type"
                            context="{'group_by': 'payment_type'}" />
                        <filter string="Journal" name="group_by_journal"
                            context="{'group_by': 'journal_id'}" />
                        <filter string="Payment Method" name="group_by_payment_method"
                            context="{'group_by': 'payment_method_line_id'}" />
                        <filter string="Company" name="group_by_company"
                            context="{'group_by': 'company_id'}" />
                        <filter string="Date" name="group_by_date" context="{'group_by': 'date'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="view_account_payment_custom_tree" model="ir.ui.view">
            <field name="name">account.payment.custom.tree</field>
            <field name="model">account.payment.custom</field>
            <field name="arch" type="xml">
                <list create="false">
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="journal_id" />
                    <field name="amount" />
                    <field name="company_id" />
                    <field name="state" />
                    <field name="custom_state" />
                    <field name="source_state" />

                </list>
            </field>
        </record>

    </data>
</odoo>