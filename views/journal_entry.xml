<odoo>
    <data>

        <record id="view_move_entry_custom_form" model="ir.ui.view">
            <field name="name">move.entry.custom.form.view</field>
            <field name="model">move.entry.custom</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="button_draft" type="object" data-hotkey="shift+g"
                            string="Reset To Draft"
                            class="oe_highlight" invisible="custom_state != 'rejected'" />

                        <button name="button_rejected" type="object" data-hotkey="shift+g"
                            string="Reject"
                            class="oe_highlight" invisible="custom_state != 'draft'" />

                        <button name="create_journal_entry" type="object"
                            data-hotkey="shift+g"
                            string="Create Journal Entry"
                            class="oe_highlight" invisible="custom_state != 'draft'" />

                        <field name="custom_state" widget="statusbar"
                            statusbar_visible="draft,created" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object"
                                invisible="entry_count == 0"
                                name="open_journal_entry"
                                icon="fa-money">
                                <field string="Journal Entry" name="entry_count"
                                    widget="statinfo" />
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="ref" />
                                <field name="patient" />
                                <field name="company_id" />
                            </group>
                            <group>
                                <field name="date" />
                                <field name="journal_id" />
                                <field name="currency_id" />
                            </group>
                        </group>
                        <notebook>
                            <page name="line_ids"
                                string="Journal Entries">
                                <field name="line_ids" widget="one2many">
                                    <list string="Journal Entries" editable="bottom">
                                        <field name="account_id" />
                                        <field name="partner_id" />
                                        <field name="name" />
                                        <field name="analytic_distribution" widget="many2many_tags" />
                                        <field name="amount_currency" />
                                        <field name="debit" sum="Debit" />
                                        <field name="credit" sum="Credit" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter />

                </form>
            </field>
        </record>

        <record id="view_move_entry_custom_tree" model="ir.ui.view">
            <field name="name">move.entry.custom.tree</field>
            <field name="model">move.entry.custom</field>
            <field name="arch" type="xml">
                <list create="false">
                    <field name="date" />
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="journal_id" />
                    <field name="company_id" />
                    <field name="state" />
                </list>
            </field>
        </record>

    </data>
</odoo>